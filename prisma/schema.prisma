generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model News {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  author       String
  title        String
  subtitle     String
  category     String
  content      String
  endText      String?
  image        String?
  imageCredits String?
  link         String?
  created_at   DateTime  @default(now())
  updated_at   DateTime? @default(now())

  @@map("news")
}
